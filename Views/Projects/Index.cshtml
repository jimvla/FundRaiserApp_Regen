@model IEnumerable<ReGenerationProjectAssignment_FundRaiser.Models.Project>

@{
    Layout = "~/Views/Shared/Main_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h1>My Projects</h1>
    <br />
    
    <table class="table table-hover table-bordered text-center" style="background-color:aliceblue">
        <thead style="background-color:cadetblue">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    Image
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VideoURL)
                </th>
                <th>
                    Money Gathered
                </th>
                <th>
                    Funding Goal
                </th>
                <th>
                    Progress
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <img src="@item.ImageURL" style="width:100px; height:100px; object-fit:contain" alt="image"/>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VideoURL)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalAmount) $
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FundingGoal) $
                        </td>
                        <td>
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped progress-bar-animated"
                                    style="width:calc((@item.TotalAmount / @item.FundingGoal) * 100%)">
                                </div>
                            </div>
                        </td>
                        <td>
                        <a asp-action="Edit" asp-route-id="@item.ProjectId"><i class="bi bi-pencil-square" style="font-size: 21px;"></i></a> |

                        <a asp-action="Delete" asp-route-id="@item.ProjectId"><i class="bi bi-trash3-fill" style="font-size: 21px;"></i></a> |

                        <a asp-action="Details" asp-route-id="@item.ProjectId"><i class="bi bi-box-arrow-in-right" style="font-size: 21px;"></i></a>
                    </td>
                    </tr>
            }
        </tbody>
    </table>
    <p>
        <input type="button" class="btn btn-success" value="Create New" onclick="location.href='@Url.Action("Create", "Projects")'" />
    </p>
</body>
</html>
